<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:background="@drawable/custom_background_add"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_text"
        android:textColor="@color/black"
        android:textSize="20dp"

        android:text="My Title"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_body_text"
        android:layout_below="@id/item_title_text"
        android:textColor="#393939"
        android:text="My Body"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_time_text"
        android:textColor="#90675E5E"
        android:textSize="12dp"
        android:gravity="end"
        android:layout_below="@id/item_arrow_img"
        android:text="My Time"></TextView>
    <ImageView
        android:layout_width="20dp"
        android:id="@+id/item_image_btn"
        android:layout_below="@id/item_body_text"
        android:src="@drawable/camera_icon"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp">

    </ImageView>


    <ImageView
        android:layout_width="20dp"
        android:id="@+id/item_arrow_img"
        android:layout_below="@id/item_body_text"
        android:layout_toEndOf="@id/item_image_btn"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:layout_height="20dp">

    </ImageView>



</RelativeLayout>